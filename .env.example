# App
PORT=3000
APP_PORT=3000
APP_DEBUG_PORT=9229

# Data source: "file" (default) or "db"
CAREERS_DATA_SOURCE=file

# Postgres (dev via docker compose)
# Admin user for the Postgres container
POSTGRES_DB=careers
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Application DB user (created automatically on first init)
CAREERS_DB_USER=careers
CAREERS_DB_PASSWORD=careers

# Host port to expose Postgres on (change if 5432 is already in use)
PGPORT=5432

# App -> Postgres connection (when CAREERS_DATA_SOURCE=db)
# Option A: single URL (recommended)
# DATABASE_URL=postgres://careers:careers@localhost:5432/careers
#
# Option B: discrete vars (used if DATABASE_URL not set)
PGHOST=localhost
PGUSER=careers
PGPASSWORD=careers
PGDATABASE=careers
PGSSLMODE=disable
