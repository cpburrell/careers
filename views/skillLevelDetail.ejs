<!DOCTYPE html>
<html>

<% let skill = skills.skills.find(s => s.id == skillId) %>
<% let level = skill.levels.find(l => l.level == levelId) %>

<head>
	<title>Skill Detail - <%= skill.name %> - Level <%= levelId %></title>
	<%- include('_styles') %>
</head>

	<body>
	<div class="page">
		<%- include('_nav') %>

		<section class="hero">
			<h1><%= skill.name %></h1>
			<p>
				<span class="badge"><%= skill.id %></span>
				<span class="badge <%= level.is_ai ? 'badge--ai' : 'badge--ok' %>" <% if (level.is_ai) { %>title="AI-generated description"<% } %>>Level <%= levelId %></span>
				<span class="badge badge--accent"><%= (skills.levels.find(l => l.level == levelId) || {}).level_name || '' %></span>
			</p>
		</section>

		<section class="card">
			<div class="card__body">
				<div style="color: var(--muted); font-size: 13px; margin-bottom: 10px;">Full description</div>
				<div style="white-space: pre-wrap;"><%= level.full_description %></div>
			</div>
		</section>

		<%- include('_footer') %>
	</div>
</body>

</html>
