<!DOCTYPE html>
<html>
<head>
	<title>Roles</title>
	<%- include('_styles') %>
</head>
<body>
	<div class="page">
		<%- include('_nav') %>

		<section class="hero">
			<h1>Roles</h1>
			<p>Browse roles by pathway and level. Click a title to view required competencies grouped by SFIA category.</p>
		</section>

		<section class="card">
			<div class="card__body table-wrap">
				<table>
					<thead>
						<tr>
							<th>Role / Pathway</th>
							<% for (let level=1; level <=7; level++) { %>
								<th>Level <%= level %></th>
							<% } %>
						</tr>
					</thead>
					<tbody>
						<% roles.roles.forEach(role => { %>
							<% roles.pathways.forEach(pathway => { %>
								<tr>
									<td>
										<div class="item-title">
											<span class="item-title__name"><%= role.name %></span>
											<span class="badge badge--accent"><%= pathway.description %></span>
										</div>
										<div class="item-title__code">/<%= role.id %> â€¢ <%= pathway.id %></div>
									</td>
									<% for (let level=1; level <=7; level++) { %>
										<td>
											<a href="/roles/<%= role.id %>/pathway/<%= pathway.id %>/level/<%= level %>">
												<%= role[pathway.id][level].title %>
											</a>
										</td>
									<% } %>
								</tr>
							<% }); %>
						<% }); %>
					</tbody>
				</table>
			</div>
		</section>

		<%- include('_footer') %>
	</div>
</body>
</html>
